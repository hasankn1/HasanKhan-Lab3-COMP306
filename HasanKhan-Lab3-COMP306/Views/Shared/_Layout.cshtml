<!DOCTYPE html>
<html lang="en">
<head>

    <title>Movie Web</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/album/">

    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: #111;
                }
    </style>

</head>
<body>
    <header>

        <ul>
            <li><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-action="Signin" asp-controller="Users" class="nav-link">Sign In</a></li>
            <li><a asp-action="Signup" asp-controller="Users" class="nav-link">Sign Up</a></li>
        </ul>

    </header>

    <div style="margin-top:10px">
        @RenderBody()
    </div>

    <footer class="text-muted">
        <div class="container">
            <p class="float-right">Created By Hasan Khan | Lab 3 Movie Web App</p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="/docs/4.5/assets/js/vendor/jquery.slim.min.js"><\/script>')</script>
    <script src="~/lib/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>