@model User
@{
    ViewBag.Title = "Movie Web | Sign In";
    ViewBag.Signin = "active";
    Layout = "_MovieLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Web | Sign In</title>
    <link rel="stylesheet" href="/lib/css/bootstrap.css" />
    <link href="~/css/Styles.css" rel="stylesheet" />

    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #141414;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container-style {
            width: 100%;
            max-width: 400px;
            background-color: #1c1c1c;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);
        }

            .container-style h2 {
                text-align: center;
                margin-bottom: 1.5rem;
                color: #e50914;
            }

        .input-style {
            width: 100%;
            padding: 12px 15px;
            margin: 8px 0;
            border: none;
            border-radius: 5px;
            background-color: #333;
            color: #ffffff;
        }

        button, .nav-link {
            background-color: #e50914;
            color: white;
            padding: 12px 0;
            margin-top: 1rem;
            border: none;
            border-radius: 5px;
            width: 100%;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
        }

            button:hover, .nav-link:hover {
                background-color: #f40612;
                opacity: 0.9;
            }

        .cancelbtn {
            background-color: #555;
            color: #ffffff;
            padding: 12px;
            border-radius: 5px;
            text-align: center;
            display: block;
            width: 100%;
            font-size: 0.9rem;
            margin-top: 1rem;
        }

            .cancelbtn:hover {
                background-color: #333;
            }
    </style>
</head>
<body>
    <div class="container-style">
        <h2>Sign In</h2>
        <form asp-action="Signin" asp-controller="Users" method="post">
            <div class="form-group">
                <label for="UserEmail"><b>Email</b></label>
                <input asp-for="UserEmail" class="input-style" placeholder="example@email.com" required />
            </div>

            <div class="form-group">
                <label for="Password"><b>Password</b></label>
                <input asp-for="Password" class="input-style" type="password" placeholder="Password" required />
            </div>

            <button type="submit">Sign In</button>

            <a class="cancelbtn nav-link" asp-action="Signup" asp-controller="Users">Sign Up</a>
            <a class="cancelbtn nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </form>
    </div>

    <script>
        setTimeout(function () {
            $('#error').fadeOut('slow');
        }, 3000);
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</body>
</html>
