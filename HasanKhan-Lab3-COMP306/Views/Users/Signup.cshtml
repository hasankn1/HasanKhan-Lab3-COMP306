@model User
@{
    ViewBag.Title = "Movie Web | Sign Up";
    ViewBag.Signup = "active";
    Layout = "_MovieLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Web | Sign Up</title>
    <link rel="stylesheet" href="/lib/css/bootstrap.css" />
    <link href="~/css/Styles.css" rel="stylesheet" />

    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #141414;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container-style {
            width: 100%;
            max-width: 450px; /* Increased max-width for a slightly larger form */
            background-color: #1e1e1e; /* Slightly lighter background color */
            border-radius: 10px;
            padding: 40px; /* More padding for a spacious feel */
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.6); /* Slightly stronger shadow */
        }

            .container-style h2 {
                text-align: center;
                margin-bottom: 1.5rem;
                color: #e50914;
                font-weight: bold; /* Bold title for emphasis */
            }

        .input-style {
            width: 100%;
            padding: 12px 15px;
            margin: 8px 0;
            border: none;
            border-radius: 8px; /* More rounded corners */
            background-color: #444; /* Darker input background for distinction */
            color: #ffffff;
            transition: background-color 0.3s; /* Smooth transition for focus effect */
        }

            .input-style:focus {
                background-color: #555; /* Lighter on focus */
                outline: none; /* Remove default outline */
            }

        button, .nav-link {
            background-color: #e50914;
            color: white;
            padding: 12px 0;
            margin-top: 1rem;
            border: none;
            border-radius: 5px;
            width: 100%;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s; /* Smooth transition for hover effect */
        }

            button:hover, .nav-link:hover {
                background-color: #f40612;
                opacity: 0.9;
            }

        .cancelbtn {
            background-color: #666; /* Different color for cancel button */
            color: #ffffff;
            padding: 12px;
            border-radius: 5px;
            text-align: center;
            display: block;
            width: 100%;
            font-size: 0.9rem;
            margin-top: 1rem;
            transition: background-color 0.3s; /* Smooth transition for hover effect */
        }

            .cancelbtn:hover {
                background-color: #444; /* Darker on hover */
            }
    </style>
</head>
<body>
    <div class="container-style">
        <h2>Sign Up</h2>
        <form asp-action="Signup" asp-controller="Users" method="post">
            <div class="form-group">
                <label for="UserEmail"><b>Email</b></label>
                <input asp-for="UserEmail" class="input-style" placeholder="example@email.com" required />
            </div>

            <div class="form-group">
                <label for="Password"><b>Password</b></label>
                <input asp-for="Password" class="input-style" type="password" placeholder="Password" required />
            </div>

            <button type="submit">Sign Up</button>

            <a class="cancelbtn nav-link" asp-action="Signin" asp-controller="Users">Sign In</a>
            <a class="cancelbtn nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </form>
    </div>

    <script>
        setTimeout(function () {
            $('#error').fadeOut('slow');
        }, 3000);
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</body>
</html>
